<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Sherlock.Custom" parent="@style/Theme.Sherlock.Light">
        <item name="abBackground">@color/gray</item>
        <item name="abHeight">50dp</item>
        <item name="abTitle">"TOUR'SIMS"</item>
        <item name="abTitleTextStyle">@style/style_abTitleTextStyle</item>
        <item name="selectableItemBackground">@drawable/selector_selectable_background</item>
    </style>

    <style name="style_abTitleTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_dashboard_button" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_dashboard_button_background" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>