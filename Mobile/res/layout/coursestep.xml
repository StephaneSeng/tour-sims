     <TextView
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:onClick="previousPlacemark"
        android:clickable="true" />
	 <TextView
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
